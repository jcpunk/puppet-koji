[kojira]
# The URL for the koji hub server
server = https://<%= @fqdn %>/kojihub

# The directory containing the repos/ directory
topdir = <%= @koji_filesystem_base %>

# Logfile
logfile = /var/log/kojira.log

# Include srpms in repos? (not needed for normal operation)
with_src = no

# How many repo processes to run
max_repo_tasks = 3
max_delete_processes = 6

#client certificate
cert = /etc/kojira/kojira.pem

#certificate of the CA that issued the client certificate
ca = /etc/pki/koji/ca_cert.crt

#certificate of the CA that issued the HTTP server certificate
serverca = /etc/pki/koji/ca_cert.crt

