[koji]
#configuration for koji cli tool

#url of XMLRPC server
server = https://<%= @koji_hubserver %>/kojihub

#url of web interface
weburl = https://<%= @koji_webserver %>/koji

#url of package download site
topurl = http://<%= @koji_webserver %>/kojifiles

#certificate of the CA that issued the HTTP server certificate
serverca = <%= @koji_client_ca_cert %>
peer_ca_cert = <%= @koji_client_ca_cert %>

###configuration for SSL authentication

##client certificate
cert = <%= @koji_client_cert %>

##certificate of the CA that issued the client certificate
ca = <%= @koji_client_ca_cert %>

